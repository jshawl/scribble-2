<h2><%= @post.title %></h2>
<p>
  <%= @post.body %>
</p>
<h3>Comments</h3>
<h4>Comment</h4>
<%= form_for ([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
<%= link_to "All Posts", posts_path %>
